@using MachineParkManagement.Models

<div class="mt-3 min-h-52 min-w-96 rounded-lg bg-gray-100 p-6">
    <h5 class="mb-4 text-center text-lg font-bold text-gray-800">Machine Statistics</h5>
    <div class="border-b-2 mb-4 border-gray-300"></div>
    <div class="mb-2 flex items-center justify-between font-medium text-gray-600">
        <span>Total Machines:</span>
        <span class="font-bold text-gray-900">@TotalMachines</span>
    </div>
    <div class="mb-2 flex items-center justify-between font-medium text-gray-600">
        <span>Online Machines:</span>
        <span class="font-bold text-green-600">@OnlineMachines</span>
    </div>
    <div class="flex items-center justify-between font-medium text-gray-600">
        <span>Offline Machines:</span>
        <span class="font-bold text-red-600">@OfflineMachines</span>
    </div>
</div>

@code {
    [Parameter]
    public List<Machine> Machines { get; set; } = new();

    private int TotalMachines => Machines.Count;
    private int OnlineMachines => Machines.Count(m => m.Status == "Online");
    private int OfflineMachines => Machines.Count(m => m.Status == "Offline");
}
